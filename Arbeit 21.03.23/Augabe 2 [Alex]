//Maximale 9 Da nur Nat체rliche Zahlen verwendet werden sollten
//Eingabe 9 
//1+2+3= 6 | 1+2+3+4=10 ==> w채re keine Nat체rliche Zahl

using System;

namespace TRY
{
    class Program
    {
        static void Main(string[] args)
        {
            //Einagbe
            Console.WriteLine("Bitte Zahl eingeben");
            int input = int.Parse(Console.ReadLine());
            int result = CalculateMaximumSum(input);
            Console.WriteLine("Das Ergebnis f체r die Eingabe " + input + " ist: " + result);
        }

        public static int CalculateMaximumSum(int n)
        {
            if (n <= 0)
            {
                return 0;
            }

            int sum = 0;
            int i = 1;

            while (sum + i <= n)
            {
                sum += i;
                i++;
            }

            return sum;
        }
    }
}
