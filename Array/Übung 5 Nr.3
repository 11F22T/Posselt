using System;

class Program
{
    static void Main()
    {
        Console.Write("Bitte geben Sie ein Wort ein: ");
        string wort = Console.ReadLine().ToLower();

        bool istPalindrom = true;
        for (int i = 0; i < wort.Length / 2; i++)
        {
            if (wort[i] != wort[wort.Length - i - 1])
            {
                istPalindrom = false;
                break;
            }
        }

        if (istPalindrom)
        {
            Console.WriteLine("Das eingegebene Wort ist ein Palindrom.");
        }
        else
        {
            Console.WriteLine("Das eingegebene Wort ist kein Palindrom.");
        }
    }
}
